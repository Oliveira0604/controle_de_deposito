    <div class="form-search">
        <form action="/products/office" method="get">
            <input type="search" name="search" placeholder="Nome do Produto" value="{{search}}">
            <input type="submit" value="Pesquisar" >
            <a href="/products/office" class="clean-btn">Limpar</a>
        </form>
    </div>
<div class="products-category">
    {{#if officeQuantity}}
    {{#each officeProducts}}
    <div class="product-card">
        <div class="product-info">
            <span>{{name}}</span>
            <p>{{description}}</p>
            <div class="form-actions">
                <form action="/" method="post">
                <input type="hidden" name="id" value="{{id}}">
                    <input type="submit" value="Editar" class="edit-btn">
                </form>
                   <form action="/products/delete" method="post">
                <input type="hidden" name="id" value="{{id}}">
                    <input type="submit" value="Excluir" class="delete-btn">
                </form>
            </div>
        </div>
    </div>
    {{/each}}

    {{else}}
    <p>Nenhum produto de limpeza cadastrado</p>
    {{/if}}

</div>